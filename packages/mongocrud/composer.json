{
    "name": "yourcompany/mongo-crud",
    "description": "Simple MongoDB CRUD operations package for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Company",
            "email": "dev@yourcompany.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "mongodb/laravel-mongodb": "^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "YourCompany\\MongoCrud\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourCompany\\MongoCrud\\MongoCrudServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
